@model My_Project.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-primary p-2 text-dark bg-opacity-10">

    <h2 style="color:gold">Details Product</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Id
            </dt>

            <dd>
                @Html.DisplayFor(model => model.product_id)
            </dd>

            <dt>
                Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.product_name)
            </dd>

            <dt>
                Image
            </dt>

            <dd>
                @Html.DisplayFor(model => model.product_image)
            </dd>

            <dt>
                Price
            </dt>

            <dd>
                @Html.DisplayFor(model => model.product_price)
            </dd>

            <dt>
                Category
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.cate_name)
            </dd>

            <dt>
                Supplier
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Supplier.supp_name)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" }) |
        @Html.ActionLink("Edit", "Edit", new { id = Model.product_id }, new { @class = "btn btn-outline-primary" }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.product_id }, new { @class = "btn btn-outline-danger" })
    </p>
</div>