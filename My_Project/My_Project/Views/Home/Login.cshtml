@using (Html.BeginForm("Login", "Home"))
{
    <div class="p-3 mb-2 bg-body-tertiary">

        <div class="row mb-3">

            <div>
                <span class="border border-dark-subtle">
                    <label class="col-sm-2 col-form-label">
                        Username
                    </label>
                </span>
            </div><br />

            <div class="col-sm-10">
                @Html.TextBox("username", "", new { @class = "form-control", placeholder = "Username", required = true })
            </div><br />

        </div>

        <div class="row mb-3">

            <div>
                <span class="border border-dark-subtle">
                    <label class="col-sm-2 col-form-label">
                        Password
                    </label>
                </span>
            </div><br />

            <div class="col-sm-10">
                @Html.TextBox("password", "", new { @class = "form-control", placeholder = "Password", required = true })
            </div><br />

        </div>

        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Remember be
                    </label>
                </div>
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-outline-primary">Sign in</button>
            | @Html.ActionLink("Register", "Create", "Customer", null, new { @class = "btn btn-outline-success" })
            | @Html.ActionLink("Sign Out", "SignOut", "Home", new { @class = "btn btn-outline-danger" })
        </div>

    </div>
}