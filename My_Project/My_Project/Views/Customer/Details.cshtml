@model My_Project.Models.Customer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-3 mb-2 bg-secondary-subtle text-emphasis-secondary">

    <h2 style="color:brown">Details Customer</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Id
            </dt>

            <dd>
                @Html.DisplayFor(model => model.customer_id)
            </dd>
            <dt>
                Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.customer_name)
            </dd>

            <dt>
                Address
            </dt>

            <dd>
                @Html.DisplayFor(model => model.customer_address)
            </dd>

            <dt>
                Country
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country.country_name)
            </dd>

            <dt>
                Phone
            </dt>

            <dd>
                @Html.DisplayFor(model => model.customer_phone)
            </dd>

            <dt>
                Email
            </dt>

            <dd>
                @Html.DisplayFor(model => model.customer_email)
            </dd>

            <dt>
                Username
            </dt>

            <dd>
                @Html.DisplayFor(model => model.customer_username)
            </dd>

            <dt>
                Password
            </dt>

            <dd>
                @Html.DisplayFor(model => model.customer_password)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" }) |
        @Html.ActionLink("Edit", "Edit", new { id = Model.customer_id }, new { @class = "btn btn-outline-primary" }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.customer_id }, new { @class = "btn btn-outline-danger" })
    </p>
</div>