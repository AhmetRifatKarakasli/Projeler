@model IPagedList<My_Project.Models.Product>
@using PagedList;
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Products</h2>
<style>
    .secici {
        height: 150px;
        width: 150px;
        border: solid;
        border-width: 1px;
        border-color: lightgrey;
        border-radius: 10px;
    }

        .secici img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }
</style>
<table class="table table-striped" align="center">
    <tr>
        <th>
            Name
        </th>
        <th>
            Image
        </th>
        <th>
            Price
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                <img src="~/Products_images/@item.product_image" height="150" width="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_price)
            </td>
        </tr>
    }
</table>